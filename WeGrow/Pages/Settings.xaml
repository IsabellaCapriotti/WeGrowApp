<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeGrow.Pages.Settings"
             NavigationPage.HasBackButton="True"
             Title="Settings">

    <ContentPage.Content >

        <StackLayout BackgroundColor="#9ED2B0">
            <StackLayout VerticalOptions="CenterAndExpand" Orientation="Vertical" Spacing="100" BackgroundColor="#9ED2B0" Padding="70, 0, 70, 0">
                <Button x:Name="resetDataButton" Text="Reset data" TextColor="White" BackgroundColor="#795547" Clicked="resetDataButton_Clicked"/>
                <Button x:Name="changeNameButton" Text="Change name" TextColor="White" BackgroundColor="#795547" Clicked="changeNameButton_Clicked"/>
                <Button x:Name="changeLoggingButton" Text="Change logging style" TextColor="White" BackgroundColor="#795547" Clicked="changeLoggingButton_Clicked"/>
                <Button x:Name="changeGoalWeightButton" Text="Change goal weight" TextColor="White" BackgroundColor="#795547" Clicked="changeGoalWeightButton_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>